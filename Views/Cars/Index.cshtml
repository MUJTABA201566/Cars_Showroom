@model IEnumerable<Car>
@{
    ViewData["Title"] = "Index";
}



<br />
<br />


<div class="row m-2">
    <div class="col-4">
        <h3>Cars List</h3>
    </div>
    <div class="col-4">
        
    </div>
    <div class="col-4 text-center">
        <a asp-controller="Cars" asp-action="Create" type="button" class="btn btn-primary">Add new car</a>
    </div>
</div>
<br />
<div style="max-height: 410px; overflow-y: auto; scrollbar-width: thin;">
    <table class="table table-light table-hover">
        <thead class="thead-light " style=" top: 0; position: sticky;">
            <tr class="col-8">
                <th scope="col">#</th>
                <th scope="col">Brand</th>
                <th scope="col">Name</th>
                <th scope="col">Model</th>
                <th scope="col">Counter</th>
                <th scope="col">Status</th>
                <th scope="col">Price</th>
                <th scope="col">Availability</th>
                <th scope="col" style="width: 1px"></th>
                <th scope="col" style="width: 1px"></th>
                <th scope="col" style="width: 1px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Brand</td>
                    <td>@item.Name</td>
                    <td>@item.Model</td>
                    <td>@item.DrivingCounter</td>
                    <td>@item.CarStatus</td>
                    <td>@item.Price SAR</td>
                    @if (item.Availability == true)
                    {
                        <td>Available</td>
                    }
                    else
                    {
                        <td>Not Available</td>
                    }

                    <th>
                        <a class="btn btn-info " asp-action="Update" asp-route-Id=@item.Id>Edit</a>
                    </th>

                    <th>
                        <a class="btn btn-danger " asp-action="Delete" asp-route-Id=@item.Id>Delete</a>
                    </th>

                    <th>
                        <a class="btn btn-warning " asp-action="Soft_Delete" asp-route-Id=@item.Id>Remove</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>


